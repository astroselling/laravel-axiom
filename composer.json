{
    "name": "astroselling/laravel-axiom",
    "description": "Laravel logging handler for Axiom",
    "keywords": [
        "laravel",
        "laravel-axiom",
        "logging"
    ],
    "homepage": "https://github.com/astroselling/laravel-axiom",
    "license": "MIT",
    "authors": [
        {
            "name": "Josh Larson",
            "email": "jplhomer@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/contracts": "^9.0",
        "monolog/monolog": "^2.0",
        "spatie/laravel-package-tools": "^1.13.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^6.1",
        "orchestra/testbench": "^7.0",
        "pestphp/pest": "^1.0",
        "pestphp/pest-plugin-laravel": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Jplhomer\\Axiom\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jplhomer\\Axiom\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-laravel-axiom --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {},
    "minimum-stability": "dev",
    "prefer-stable": true
}
